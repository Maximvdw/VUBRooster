<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>VUBRooster</artifactId>
    <groupId>be.vubrooster</groupId>
    <version>1.0-SNAPSHOT</version>
    <relativePath>../../pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>EAR-vubrooster</artifactId>
  <packaging>ear</packaging>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-ear-plugin</artifactId>
        <version>2.6</version>
        <configuration>
          <applicationName>EAR-vubrooster</applicationName>
          <version>6</version>
          <defaultLibBundleDir>lib</defaultLibBundleDir>
          <modules>
            <ejbModule>
              <groupId>be.vubrooster</groupId>
              <artifactId>EJB-core</artifactId>
              <bundleFileName>EJB-core.jar</bundleFileName>
            </ejbModule>
            <ejbModule>
              <groupId>be.vubrooster</groupId>
              <artifactId>EJB-timetable</artifactId>
              <bundleFileName>EJB-timetable.jar</bundleFileName>
            </ejbModule>
            <ejbModule>
              <groupId>be.vubrooster</groupId>
              <artifactId>EJB-user</artifactId>
              <bundleFileName>EJB-user.jar</bundleFileName>
            </ejbModule>
            <ejbModule>
              <groupId>be.vubrooster</groupId>
              <artifactId>EJB-twitter</artifactId>
              <bundleFileName>EJB-twitter.jar</bundleFileName>
            </ejbModule>
            <ejbModule>
              <groupId>be.vubrooster</groupId>
              <artifactId>EJB-gcal</artifactId>
              <bundleFileName>EJB-gcal.jar</bundleFileName>
            </ejbModule>
            <ejbModule>
              <groupId>be.vubrooster</groupId>
              <artifactId>EJB-config</artifactId>
              <bundleFileName>EJB-config.jar</bundleFileName>
            </ejbModule>
            <jarModule>
              <groupId>be.vubrooster</groupId>
              <artifactId>EJB-persistence</artifactId>
              <bundleFileName>EJB-persistence.jar</bundleFileName>
            </jarModule>
          </modules>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.3</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <relocations>
                <relocation>
                  <pattern>be.vubrooster</pattern>
                  <shadedPattern>be.vubrooster</shadedPattern>
                </relocation>
              </relocations>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>

